package jelena.milivojevic;

import java.text.DecimalFormat;
import java.util.Scanner;

public class AritmetickaSredinaParnih {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Koliko vrednosti unosite");
		int brojVrednosti = sc.nextInt();
		double aritmeticka = 0;

		for (int i = 1; i <= brojVrednosti; i++) {
			System.out.println("Unesite " + i + "broj ");
			int vrednost = sc.nextInt();
			if (vrednost%2==0) {
			aritmeticka = (vrednost+vrednost)/brojVrednosti;
					System.out.println("Aritmeticka vrednost iznosi: " + aritmeticka);
			}
	}
}
