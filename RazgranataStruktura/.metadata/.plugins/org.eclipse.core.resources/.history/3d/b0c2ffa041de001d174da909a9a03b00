package jelena.milivojevic;

import java.util.Scanner;

public class UporedjivanjeDanUNedelji {

	public static void main(String[] args) {
		/*
		 * Ako se sa ulaza u훾itavaju tri prirodna broja k1, k2, k3 koji ozna훾avaju redni
		 * broj dana u godini, ispitati da li ozna훾avaju isti dan u nedelji. Na primer,
		 * isti dan izna훾avaju: 2, 16 i 30 ili 344, 351, i 358.
		 */
		int k1, k2, k3, boolToInt;
		boolean i;

		/* 1. deo: Unos podataka */
		Scanner ulaz = new Scanner(System.in);

		System.out.println("Unesite vrednost za k1: ");
		k1 = ulaz.nextInt();
		System.out.println("Unesite vrednost za k2: ");
		k2 = ulaz.nextInt();
		System.out.println("Unesite vrednost za k3: ");
		k3 = ulaz.nextInt();

		i = ((k2 - k1) % 7 == 0 && (k3 - k1) % 7 == 0);

		boolToInt = i ? 1 : 0;
	}

}
